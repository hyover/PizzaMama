@page
@model pizza_mama.Pages.Admin.Pizzas.DeleteModel

@{
    ViewData["Title"] = "Supprimer une pizza";
}

<h1>@ViewData["Title"]</h1>

<h3>Etes-vous sûr de vouloir supprimer cette Pizza ?</h3>
<div>
    <h4>Pizza</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pizza.name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pizza.name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pizza.price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pizza.price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pizza.vegetarian)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pizza.vegetarian)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pizza.ingredients)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pizza.ingredients)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Pizza.PizzaId" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-page="./Index">Retour à la liste</a>
    </form>
</div>

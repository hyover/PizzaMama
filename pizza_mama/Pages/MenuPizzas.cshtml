@page
@model pizza_mama.Pages.MenuPizzasModel
@{
    ViewData["Title"] = "Les Pizzas";
}

<!doctype html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <script src="script.js"></script>
</head>
<body>

    <a asp-page="Index">
        <img src="~/images/small_logo.png" id="small-logo" />
    </a>

    <div class="menu-title">
        <h1>@ViewData["Title"]</h1>
    </div>

    <div class="menu-list">
    @foreach (var pizza in Model.Pizza)
    {
        <div class="menu-list-item">
            <span class="menu-list-title">@pizza.name</span>
            <span class="menu-list-price">@String.Format("{0:0.00}", @pizza.price)€</span>
            <span class="menu-list-ingredients">@pizza.ingredients</span>
           @if (pizza.vegetarian)
                {
                    <span class="menu-list-badge">VEGETARIENNE</span>
                }
            </div>
    }
    </div>

</body>
</html>

